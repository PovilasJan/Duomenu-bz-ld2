@model IEnumerable<Org.Ktu.Isk.P175B602.Autonuoma.Models.Darbuotojas>

@{ ViewData["title"] = "Darbuotojai"; }

<div class="main-content-header">
    <span class="title">@ViewData["title"]</span>
    <span class="actions">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Sukurti naują
        </a>
    </span>
</div>

<div class="main-content-lst">
    <table class="entity-list">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().AsmensKodas)</th>
                <th>@Html.DisplayNameFor(model => model.First().Vardas)</th>
                <th>@Html.DisplayNameFor(model => model.First().Pavarde)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AsmensKodas)</td>
                    <td>@Html.DisplayFor(modelItem => item.Vardas)</td>
                    <td>@Html.DisplayFor(modelItem => item.Pavarde)</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.AsmensKodas })" class="btn btn-primary">
                            <i class="fa-solid fa-pen-to-square"></i> Redaguoti
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.AsmensKodas })" class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i> Šalinti
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
