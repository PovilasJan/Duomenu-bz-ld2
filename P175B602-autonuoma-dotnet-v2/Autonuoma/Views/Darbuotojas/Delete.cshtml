@model Org.Ktu.Isk.P175B602.Autonuoma.Models.Darbuotojas

@{ ViewData["title"] = "Darbuotojo šalinimas"; }

<div class="main-content-header">
    <span class="title">@ViewData["title"]</span>
    <span class="actions">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm">
            <i class="fa-solid fa-angles-left"></i> Atgal į sąrašą
        </a>
    </span>
</div>

<div class="main-content-ced">
    @using (Html.BeginForm("DeleteConfirm", "Darbuotojas", FormMethod.Post, new { @class = "entity-d" }))
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <legend class="confirm-msg">Ar tikrai norite pašalinti šį darbuotoją?</legend>

            <dl>
                <dt>@Html.DisplayNameFor(m => m.AsmensKodas)</dt>
                <dd>@Html.DisplayFor(m => m.AsmensKodas)</dd>

                <dt>@Html.DisplayNameFor(m => m.Vardas)</dt>
                <dd>@Html.DisplayFor(m => m.Vardas)</dd>

                <dt>@Html.DisplayNameFor(m => m.Pavarde)</dt>
                <dd>@Html.DisplayFor(m => m.Pavarde)</dd>
            </dl>

            @if (ViewData["deletionNotPermitted"] != null)
            {
                <div class="fail-msg">
                    <i class="fa-solid fa-circle-exclamation"></i> Šio darbuotojo pašalinti negalima, nes jis turi ryšių į priklausomas esybes.
                </div>
            }
            else
            {
                <div class="buttons">
                    <button formaction="@Url.Action("DeleteConfirm", new { id = Model.AsmensKodas })" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i> Šalinti
                    </button>
                </div>
            }
        </fieldset>
    }
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>